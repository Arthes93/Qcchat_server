<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.qucell.chat.mapper.roomMapper">
  	<select id ="selectAllRooms" resultType="org.qucell.chat.model.Rooms">
  	<![CDATA[
  		select * from CHATROOM where room_id>0;
  		]]>
  	</select>
  	
  	<select id ="selectUserRooms" resultType="org.qucell.chat.model.Rooms">
  	<![CDATA[
  		select * from CHATROOM where room_owner=#{userId};
  		]]>
  	</select>
  	
  	<select id ="selectAllRoomsWithoutAlreadyJoin" resultType="org.qucell.chat.model.Rooms">
  		<![CDATA[
  			select * from CHATROOM C where C.room_id not in (select room_id from USER where user_id = #{userId})
  		]]>
  	</select>
  </mapper>